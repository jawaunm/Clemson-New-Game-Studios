else if(keyboard_check(key_playerRight))
{
    if (onGround == 1) {
    sprite_index = spr_player;
    image_speed = .2;
    }
    //changes sprite direction to the opposite given by sprite
    image_xscale = 1;
    
    //lets animation run while moving
    image_speed = .1;
}

//jump when pressing key_playerUp
