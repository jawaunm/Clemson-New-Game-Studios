{
    onGround = 1;
}
else
{
    onGround = 0;
}


//move left if pressing key_playerLeft
if(keyboard_check(key_playerLeft))
{
    
 if (onGround == 1) {
    sprite_index = spr_player;
    image_speed = .2;
    }
    //changes sprite direction to the original given by sprite
    image_xscale = -1;
    
}

